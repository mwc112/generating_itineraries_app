<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matthew.mapdirections.AddWaypoints">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrllWaypoints"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btnAdd"
        android:layout_above="@+id/btnMap"
        android:layout_toEndOf="@+id/btnMap"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btnAdd"
        android:layout_alignParentEnd="true"
        android:onClick="onClickAdd" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to map"
        android:id="@+id/btnMap"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:enabled="true"
        android:clickable="true"
        android:onClick="onClickMap" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up"
        android:id="@+id/btnUp"
        android:layout_below="@+id/scrllWaypoints"
        android:layout_toEndOf="@+id/btnMap"
        android:onClick="onClickUp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Down"
        android:id="@+id/btnDown"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnUp"
        android:onClick="onClickDown" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rm"
        android:id="@+id/btnRm"
        android:onClick="onClickRM"
        android:layout_below="@+id/scrllWaypoints"
        android:layout_toEndOf="@+id/btnDown" />

</RelativeLayout>
